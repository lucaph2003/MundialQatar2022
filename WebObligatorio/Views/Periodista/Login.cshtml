@{
    ViewData["Title"] = "Login";
}
<h3>Inicio de Sesion</h3>

<form action="/Periodista/LoginPeriodista" method="post">

    <div class="form-outline mb-4">
        <label class="form-label" for="username">Nombre de Usuario</label>
        <input type="text" class="form-control" id="username" name="nombreCompleto" required />
    </div>

    <div class="form-outline mb-4">
        <label class="form-label" for="password">Contraseña</label>
        <input type="password" class="form-control" id="password" name="password" required />
    </div>

    <div class="form-outline mb-4">
        <button type="submit" class="btn btn-primary btn-block mb-4">Iniciar Sesion</button>
    </div>
    
</form>